<view class="page-body">
  <view class="page-body-wrapper">
    <van-notice-bar
  mode="closeable"
  text="{{notice}}"/>
    <camera wx:if='{{CameraShow}}' class='verify-win' device-position="front" flash="off" binderror="error" style="width:{{windowWidth}}px; height:{{windowHeight*0.8}}px">
    </camera>
    <view style='margin-top:20px;'>
      <van-row>
        <van-col span="16" offset="4">
          <van-button wx:if='{{!isLoading}}' style='height:50px' class='verify-btn' type="info" size="large"  bindtap='SignClick'>一键签到</van-button>
          <van-button wx:if='{{isLoading}}' style='height:50px' class='verify-btn' type="info" size="large" loading loading-text="人脸识别中..." bindtap='SignClick'>一键签到</van-button>
        </van-col>
      </van-row>
    </view>


  </view>
</view>